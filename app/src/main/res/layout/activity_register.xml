<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/detail_register"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register Here"
                android:layout_marginTop="30dp"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/notFavouriteColour"
                android:id="@+id/register_page"
                android:layout_centerHorizontal="true"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_input_layout"
                android:layout_below="@id/register_page"
                android:layout_marginTop="30dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="  Enter your name"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:layout_margin="10dp"
                    android:id="@+id/reg_name"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_input_layout2"
                android:layout_below="@id/text_input_layout"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="  Enter Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"
                    android:id="@+id/reg_email"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_input_layout3"
                android:layout_below="@id/text_input_layout2"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="  Phone number"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"
                    android:inputType="phone"
                    android:id="@+id/reg_phone"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_input_layout4"
                android:layout_below="@id/text_input_layout3"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="  Password"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"
                    android:inputType="textPassword"
                    android:id="@+id/reg_password"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_input_layout5"
                android:layout_below="@id/text_input_layout4"
                android:layout_marginTop="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="  Confirm Password"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"
                    android:inputType="textPassword"
                    android:id="@+id/reg_confirm_pass"/>
            </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_input_layout5">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_centerHorizontal="true"
                android:id="@+id/register_button"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="already account?"
                android:id="@+id/already"
                android:layout_below="@+id/register_button"
                android:layout_marginLeft="100dp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" LOGIN"
                android:id="@+id/login_text"
                android:textSize="16sp"
                android:textColor="@color/notFavouriteColour"
                android:layout_toEndOf="@id/already"
                android:layout_marginTop="6dp"
                android:layout_below="@id/register_button"/>
        </RelativeLayout>
       </RelativeLayout>
    </ScrollView>
</RelativeLayout>